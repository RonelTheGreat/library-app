<!DOCTYPE html>
<html>
    <head>
        <title>Welcome to AutoLib</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="assets/css/main.css" />
        <link rel="stylesheet" href="assets/css/landing.css" />
        <link rel="stylesheet" href="assets/css/all.css" />
    </head>
    <body>
        <script src="assets/js/jsQR.js"></script>
        <script src="/assets/js/jquery.js"></script>

        <div class="parent">
            <div class="tag bg-navy">
                <div class="cam-icon">
                    <i class="fas fa-camera-retro fa-3x"></i>
                </div>
                <div class="tag-msg">
                    <span id="msg" class="<%= (error) ? 'tag-error' : ''%>">
                        <i class="fas fa-exclamation-circle"></i>
                        <% if (error) { %> <%= error %> <% } else { %> let me
                        scan your ID! <% } %>
                    </span>
                </div>
            </div>

            <div class="cam">
                <canvas id="canvas" width="100" height="100"></canvas>
                <video id="video">Browser doesn't support video tag</video>
            </div>

            <div class="wmsg">
                <span class="welcome">Welcome</span><br />
                <span class="to">to</span><br />
                <span class="lib">Automated Library</span>
            </div>

            <div class="login">
                <a href="/admin/login" class="link bg-green">
                    <i class="fas fa-sign-in-alt"></i> Login As Admin</a
                >
            </div>

            <div class="footer">
                <p>All Rights Reserved. 2019 &copy; rcob</p>
            </div>
        </div>

        <form id="form" action="/user/auth" method="POST" hidden>
            <input type="text" name="id" id="input" hidden />
        </form>

        <script src="assets/js/main.js"></script>

        <script>
            var tagMsg = document.querySelector('.tag-msg');

            setTimeout(function() {
                tagMsg.innerHTML =
                    '<span id="msg">Let me Scan a QR Code</span>';
            }, 2000);
        </script>
    </body>
</html>
